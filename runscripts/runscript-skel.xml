<runscript>
	<!-- two example machines -->

	<machine name="belle-ile" cpu="1x Intel(R) Core(TM)2 Duo CPU E6750 @ 2.66GHz" memory="2GB"/>
	<machine name="zuse" cpu="24 nodes with 2 Intel(R) Xeon(R) CPU E5520 @ 2.27GHz quad cores" memory="24GB"/>
	
	<!-- an example configuration for clasp -->

	<system name="clasp" version="1.3.1" measures="clasp"/>
	<setting name="one-as" system="clasp" cmdline="--stats 1"/>
	<setting name="all-as" system="clasp" cmdline="--stats 0"/>

	<seqjob name="clasp" timeout="10" runs="1" parallel="4"/>

	<config name="clasp" template="templates/clasp.pyratemp" output="output"/>

	<!-- an example configuration for claspar -->

	<system name="claspar" version="0.0.1" measures="claspar"/>
	<setting name="one-as" system="claspar" cmdline="--stats 1"/>
	<setting name="all-as" system="claspar" cmdline="--stats 0"/>

	<pbsjob 
		name="claspar" timeout="10" runs="1" 
		ppn="8" procs="1 2 4 8" script_mode="multi" walltime="23:59:00"/>

	<config name="claspar" template="templates/claspar-mpich2.pyratemp" output="output"/>

	<!-- an example benchmark for both clasp and claspar -->

	<benchmark name="default">
		<files path="Benchmarks">
			<ignore prefix="Pigeonhole"/>
			<ignore prefix="BlockedN-QueensCompetition"/>
			<ignore prefix="RandomNonTight"/>
		</files>
		<file path="classname/instance.sm"/>
	</benchmark>

	<!-- two example jobs -->
	<runspec 
		name="clasp-example" 
		machine="belle-ile"
		system="clasp" 
		version="1.3.1" 
		setting="one-as" 
		config="clasp"
		job="clasp"
		benchmark="default"/>

	<runspec 
		name="claspar-example" 
		machine="zuse"
		system="claspar" 
		version="0.0.1" 
		setting="one-as"
		config="claspar"
		job="claspar"
		benchmark="default"/>

</runscript>

