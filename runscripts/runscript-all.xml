<runscript output="output">
	<machine name="belle-ile" cpu="2xE6750@2.66GHz" memory="2GB"/>
	<machine name="minquiers" cpu="2xE6750@2.66GHz" memory="2GB"/>
	<machine name="zuse" cpu="24x8xE5520@2.27GHz" memory="24GB"/>
	
	<config name="claspar-config" template="templates/claspar.pyratemp"/>
	<system name="claspar-system" version="2.1.0" measures="claspar" config="claspar-config">
		<setting name="one-as" tag="par one-as" cmdline="--stats 1"/>
		<setting name="all-as" tag="par all-as" cmdline="--stats 0"/>
	</system>

	<config name="clasp-config" template="templates/clasp.pyratemp"/>
	<system name="clasp-system" version="1.3.1" measures="clasp" config="clasp-config">
		<!-- optionally allows for tagging settings -->
		<setting name="one-as" tag="seq one-as" cmdline="--stats 1"/>
		<!-- allows for arbitrary additional arbitrary args to pass to the template -->
		<setting name="all-as" tag="seq all-as" cmdline="--stats 0" any="bla"/>
	</system>
	
	<seqjob name="clasp-job" timeout="10" runs="1" parallel="4" any="yes"/>
	<pbsjob name="claspar-job" timeout="10" runs="1" ppn="2" procs="1 2 4 8" script_mode="multi" walltime="23:59:59"/>

	<benchmark name="clasp-benchmark">
		<!-- recursively add all files under a given path -->
		<folder path="benchmarks/clasp">
			<!-- ignore parts that have a certain prefix -->
			<ignore prefix="Pigeonhole"/>
			<ignore prefix="BlockedN-QueensCompetition"/>
			<ignore prefix="RandomNonTight"/>
		</folder>
		<!-- add files below a path individually -->
		<files path="benchmarks/clasp">
			<add file="Pigeonhole/instance1.sm"/>
		</files>
	</benchmark>
	<benchmark name="claspar-benchmark">
		<folder path="benchmarks/claspar"/>
	</benchmark>

	<project name="clasp-all-as" job="clasp-job">
		<runspec machine="belle-ile" benchmark="clasp-benchmark" system="clasp-system" version="1.3.1" setting="all-as"/>
	</project>
	<project name="clasp-one-as" job="clasp-job">
		<runtag machine="belle-ile" benchmark="clasp-benchmark"	tag="seq one-as"/>
	</project>
	<project name="claspar-all-as" job="claspar-job">
		<runspec machine="zuse" benchmark="claspar-benchmark" system="claspar-system" version="2.1.0" setting="all-as"/>
	</project>
	<project name="claspar-one-as" job="claspar-job">
		<runspec machine="zuse" benchmark="claspar-benchmark" system="claspar-system" version="2.1.0" setting="one-as"/>
	</project>
</runscript>